      "timeout": 40
    },
    {
      "name": "Wait delete item button",
      "action": "wait",
      "selector": ".cart-delete-item",
      "timeout": 40
    },
    {
      "name": "Delete item from cart",
      "action": "click",
      "selector": ".cart-delete-item",
      "timeout": 40
    },
    {
      "name": "Wait empty cart state",
      "action": "wait",
      "selector": ".slot-EmptyCartMiddleContentSlot > div",
      "timeout": 40
