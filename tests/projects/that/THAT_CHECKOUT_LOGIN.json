      "timeout": 40
    },
    {
      "name": "Go to checkout",
      "action": "click",
      "selector": ".slot-CenterRightContentSlot .checkout-button",
      "timeout": 40
    },
    {
      "name": "Wait login button",
      "action": "wait",
