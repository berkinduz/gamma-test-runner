    {
      "name": "Open first product link",
      "action": "click",
      "selector": ".slot-ProductListSlot a[href*=\"/product/\"]",
      "timeout": 40
    },
    {
      "name": "Wait add to cart button",
      "action": "wait",
      "selector": ".product-add-to-cart",
      "timeout": 20
    },
    {
      "name": "Add to cart",
      "action": "click",
      "selector": ".product-add-to-cart",
      "timeout": 20
    },
    {
      "name": "Wait mini go to cart",
      "action": "wait",
      "selector": ".mini-go-to-cart",
      "timeout": 40
